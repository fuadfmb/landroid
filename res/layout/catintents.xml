<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorintents"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/category4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="sans-serif-condensed"
                        android:paddingLeft="10dp"
                        android:text="Intents And More"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="100dp"
                        android:layout_height="1dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="#fff"
                        android:layout_toRightOf="@+id/category4"
                        android:layout_toEndOf="@+id/category4" />

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/i1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/buttonbg"
                        android:onClick="openExampleIntents"
                        android:text="Making Call"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/i2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/buttonbg"
                        android:onClick="openExampleIntents"
                        android:text="Sending SMS"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/i3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/buttonbg"
                        android:onClick="openExampleIntents"
                        android:text="Sending Email"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/i11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/buttonbg"
                        android:onClick="openExampleIntents"
                        android:text="More Intents"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/i4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/buttonbg"
                        android:text="viewPager + Tabs"
                        android:onClick="openExampleIntents"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/i15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/buttonbg"
                        android:text="Music Player"
                        android:onClick="openExampleIntents"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/i16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/buttonbg"
                        android:text="Video Player"
                        android:onClick="openExampleIntents"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/i7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/buttonbg"
                        android:text="Splash Screen"
                        android:onClick="openExampleIntents"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/i8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/buttonbg"
                        android:text="SQLite"
                        android:onClick="openExampleIntents"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/i10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/buttonbg"
                        android:text="ViewFlipper"
                        android:onClick="openExampleIntents"
                        android:textColor="#fff" />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>



